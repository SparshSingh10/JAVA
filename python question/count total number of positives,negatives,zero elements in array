//4.	WAP to input an array of N number of elements and count total number of positives, negatives and zero elements in that array and display those counts.
#include<stdio.h>
int main()
{
	int i,n,s=0,c1=0,c2=0,c3=0;
	printf("enter size\n");
	scanf("%d",&n);
	int a[n];
	printf("enter element\n");
	for(i=0;i<n;i++)
	{
		
		scanf("%d",&a[i]);
		if(a[i]>0)
		++c1;
		else if(a[i]<0)
		++c2;
		
		else if(a[i]==0)
		++c3;
	}
	printf("+ve no.'s = %d\n",c1);
	printf("-ve no.'s =%d\n",c2);		
	printf("0's =%d\n",c3);					
}
